<button class="btn btn-danger d-lg-none m-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasResponsiveControlUser" aria-controls="offcanvasResponsiveControlUser"><i class="bi bi-layout-sidebar-inset"></i></button>
<div class="offcanvas-lg offcanvas-start" tabindex="-1" id="offcanvasResponsiveControlUser" aria-labelledby="offcanvasResponsiveControlUserLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasResponsiveControlUserLabel">Trình điều khiển</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasResponsiveControlUser" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="user_control">
            <div class="list-group">
                <a href="/User/ControlPanel" class="list-group-item">Bảng điều khiển tài khoản</a>
                <a href="/User/Address" class="list-group-item">Sổ địa chỉ</a>
                <a href="/User/Vouchers" class="list-group-item">Ví voucher</a>
                <a href="/User/Orders" class="list-group-item">Đơn hàng của tôi</a>
                <a href="/User/Reviews" class="list-group-item">Nhận xét của tôi</a>
                <a href="/User/Notifications" class="list-group-item">Thông báo</a>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        var currentLinks = document.querySelectorAll('.user_control a');
        if (currentLinks.length > @active) {
            currentLinks[@active].classList.add('active');
        }
    });
</script>

@code {
    [Parameter]
    public int active { get; set; }
}
