@model ICollection<FahasaStoreClientApp.Entities.Notification>

<div class="notification dropdown my-1">
    <div title="Notification" role="button" data-bs-toggle="dropdown" aria-expanded="false" class="notification-btn py-2 d-flex flex-column align-items-center fw-bold text-black-50 pe-3">
        <div class="position-relative">
            <i class="bi bi-bell"></i>
            @if(Model.Count > 0)
            {
                <span class="position-absolute top-0 start-100 translate-middle-y translate-middle badge rounded-pill bg-danger ">
                    @Model.Count
                    <span class="visually-hidden">unread messages</span>
                </span>
            }
        </div>
        <span class="dropdown-toggle d-none d-lg-block">Thông báo</span>
    </div>
    <div class="dropdown-menu dropdown-menu-end shadow" style="width: 360px;">
        <div class="d-flex justify-content-between border-bottom align-items-center">
            <div class="px-3 py-2 fw-bold">
                <i class="bi bi-bell"></i>
                <span>Thông báo</span>
            </div>
            <a href="/User/Notification" class="fw-bold text-decoration-none px-3 py-2">Xem tất cả</a>
        </div>
        <ul class="list-group">
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <li class="list-group-item border-0 p-0">
                        <a href="#" class="dropdown-item list-group-item rounded-3 border-0">
                            <div>
                                <h6 class="text-truncate">@item.NotificationType.Name</h6>
                                <p class="text-truncate m-0">@item.Title</p>
                            </div>
                        </a>
                    </li>
                }
            }
        </ul>
    </div>
</div>