@model FahasaStoreClientApp.Models.ViewModels.BannerVM

<div id="News" class="bg-black bg-opacity-10">
    @* breadcrumb - view product *@
    <div class="container">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="py-2">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Banner</li>
            </ol>
        </nav>
    </div>

    <div>
        <img src="@Model.ImageUrl" class="w-100 h-100" />
        <div class="p-3 bg-white rounded-3">
            <div class="text-center">
                <h4>@Model.Title</h4>
                <span>@Model.CreatedAt</span>
            </div>
            <div class="container textContent">
                <p>@Model.Content</p>
            </div>
        </div>
    </div>
</div>