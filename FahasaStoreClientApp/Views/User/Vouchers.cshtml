@using FahasaStoreClientApp.Components
@using FahasaStoreClientApp.Models.DTO
@model FahasaStoreClientApp.Models.CustomModels.PaginatedResponse<VoucherDTO>
@{
}
<div class="bg-black bg-opacity-10">
    <div class="container pt-4">
        <div class="bg-white rounded-3 py-3">
            <div class="row">
                <div class="col-lg-3">
                    @(await Html.RenderComponentAsync<SideBarUser>(RenderMode.ServerPrerendered, new { active = 2 }))
                </div>
                <div class="col-lg-9 px-4">
                    <h5 class="text-uppercase">Ví voucher</h5><hr />
                    <div class="row g-3 mb-3">
                        @{
                            if(Model.Items.Count > 0)
                            {
                                foreach (var voucher in Model.Items)
                                {
                                    <div>
                                        <div class="d-flex align-items-center bg-light border rounded-3 p-2">
                                            <img src="https://cdn0.fahasa.com/skin/frontend/ma_vanese/fahasa/images/ico_coupongreen.svg?q=105721" width="75" height="75" class="object-fit-contain me-2" />
                                            <div class="flex-grow-1">
                                                <div class="oneLine text-uppercase fw-bold">@voucher.Name</div>
                                                <div class="d-flex justify-content-between align-items-center mt-2">
                                                    <a href="/Home/VoucherDetails" IdValue="@voucher.Id" onclick="HandlerCRUD(this, event)" class="nav-link">Chi tiết</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                    @if (Model.PageCount > 1)
                    {
                        <nav>
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Vouchers", new { page = 1 })">First</a>
                                </li>
                                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Vouchers", new { page = Model.PageNumber - 1 })">Previous</a>
                                </li>
                                
                                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                                {
                                    <li class="page-item">
                                        <a class="page-link @(Model.PageNumber == i ? "active" : "")" href="@Url.Action("Vouchers", new { page = i })">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Vouchers", new { page = Model.PageNumber + 1 })">Next</a>
                                </li>
                                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Vouchers", new { page = Model.PageCount })">Last</a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


